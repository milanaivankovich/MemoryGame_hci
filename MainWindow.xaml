<Window x:Class="MemoryGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Card Game" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Grid.Row="0">
            <TextBlock Text="Težina: " FontSize="16" VerticalAlignment="Center" />
            <ComboBox Name="DifficultyComboBox" FontSize="16" Padding="10,5" Margin="10,0,0,0" SelectionChanged="DifficultyComboBox_SelectionChanged">
                <ComboBoxItem Content="Lako (4x4)" Tag="4" />
                <ComboBoxItem Content="Srednje (6x6)" Tag="6" />
                <ComboBoxItem Content="Teško (8x8)" Tag="8" />
            </ComboBox>
        </StackPanel>

       
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Grid.Row="1">
            <TextBlock Name="TimerText" FontSize="18" Margin="0,0,15,0" VerticalAlignment="Center" />
            <TextBlock Name="MoveCounterText" FontSize="18" Margin="0,0,15,0" Text="Potezi: 0" VerticalAlignment="Center" />
            <Button Name="PauseButton" Content="Pauza" FontSize="14" Padding="8,4" Margin="0,0,8,0" Click="PauseButton_Click" />
            <Button Name="RestartButton" Content="Restart" FontSize="14" Padding="8,4" Margin="0,0,8,0" Click="RestartButton_Click" />
            <Button Name="RankingButton" Content="Tabela" FontSize="14" Padding="8,4" Click="RankingButton_Click" />
        </StackPanel>

       
        <Grid Name="CardGrid" Margin="10" Grid.Row="2">
            
        </Grid>
    </Grid>
</Window>