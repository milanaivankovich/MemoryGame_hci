<Window x:Class="MemoryGame.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Game - Start" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF6B73FF" Offset="0"/>
                <GradientStop Color="#FF009FFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
            <!-- Game Title -->
            <TextBlock Name="GameTitleLabel" 
                       Text="Memory Game" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="3"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Difficulty Selection -->
            <Border Background="White" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Odaberite težinu:" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10" 
                               Foreground="#FF333333"/>
                    <ComboBox Name="DifficultyComboBox" 
                              FontSize="16" 
                              Padding="10,8" 
                              SelectionChanged="SelectionChanged">
                        <ComboBoxItem Content="Lako (4x4)" Tag="4" IsSelected="True" />
                        <ComboBoxItem Content="Srednje (6x6)" Tag="6" />
                        <ComboBoxItem Content="Teško (8x8)" Tag="8" />
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Theme Selection -->
            <Border Background="White" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,25">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Odaberite temu:" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10" 
                               Foreground="#FF333333"/>
                    <ComboBox Name="ThemeComboBox" 
                              FontSize="16" 
                              Padding="10,8" 
                              SelectionChanged="SelectionChanged">
                        <ComboBoxItem Content="Zastave država" Tag="flags" IsSelected="True" />
                        <ComboBoxItem Content="Hrana" Tag="food" />
                        <ComboBoxItem Content="Automobili" Tag="cars" />
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Start Game Button -->
            <Border CornerRadius="25" Background="#FF4CAF50">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="4" Opacity="0.4"/>
                </Border.Effect>
                <Button Name="StartGameButton" 
                        Content="Start Game" 
                        FontSize="20" 
                        FontWeight="Bold" 
                        Padding="30,12" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Click="StartGameButton_Click"
                        IsEnabled="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#FFCCCCCC"/>
                                    <Setter Property="Foreground" Value="#FF666666"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </StackPanel>
    </Grid>
</Window>